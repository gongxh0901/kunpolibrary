        if (wx.createRewardedVideoAd) {
            const rewardedVideoAd = wx.createRewardedVideoAd({
                adUnitId: options.adUnitId
            });
            
            rewardedVideoAd.onLoad(() => {
                rewardedVideoAd.show();
            });
            
            rewardedVideoAd.onClose((res) => {
                if (res && res.isEnded) {
                    options.success?.();
                } else {
                    options.fail?.('用户取消观看');
                }
            });
        }
    }
}
